<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/map_height">
        <org.osmdroid.views.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layerType="software"/>
        <TextView
            android:id="@+id/map_address_textview"
            android:text="Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="16dp"
            android:textSize="@dimen/task_info_group_name_text"
            android:layout_alignParentBottom="true"
            android:background="#44000000"
            android:textColor="@color/light_text"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/deep_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin">
            <!--Receiver info-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="15dp">
                <TextView
                    android:text="@string/receiver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/task_info_group_name_text"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"/>
                <View
                    android:background="@color/primary_text"
                    android:layout_width = "match_parent"
                    android:layout_height="2dip" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <!--Name-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:text="@string/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/task_info_group_inner_text"
                            android:textColor="@color/secondary_text"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/receiver_name"
                            android:text="@string/unknown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:textSize="@dimen/task_info_group_inner_text"
                            android:textColor="@color/secondary_text"/>
                    </LinearLayout>
                    <!--Phone-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:text="@string/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/task_info_group_inner_text"
                            android:textColor="@color/secondary_text"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/receiver_phone"
                            android:text="@string/unknown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:textSize="@dimen/task_info_group_inner_text"
                            android:textColor="@color/secondary_text"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--Sender info-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">
                <TextView
                    android:text="@string/sender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/task_info_group_name_text"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"/>
                <View
                    android:background="#999999"
                    android:layout_width = "fill_parent"
                    android:layout_height="2dip" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:text="@string/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/task_info_group_inner_text"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/sender_name"
                            android:text="@string/unknown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:textSize="@dimen/task_info_group_inner_text" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:text="@string/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/task_info_group_inner_text"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/sender_address"
                            android:text="@string/unknown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:textSize="@dimen/task_info_group_inner_text" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:text="@string/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/task_info_group_inner_text"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/sender_phone"
                            android:text="@string/unknown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:textSize="@dimen/task_info_group_inner_text" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--Content-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">
                <TextView
                    android:text="@string/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/task_info_group_name_text"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"/>
                <View
                    android:background="#999999"
                    android:layout_width = "match_parent"
                    android:layout_height="2dip" />
                <TextView
                    android:id="@+id/task_content"
                    android:text="@string/unknown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="@dimen/task_info_group_inner_text" />
            </LinearLayout>
            <!--Info-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">
                <TextView
                    android:text="Info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/task_info_group_name_text"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"/>
                <View
                    android:background="#999999"
                    android:layout_width = "match_parent"
                    android:layout_height="2dip" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:text="Date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/task_info_group_inner_text"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/task_date"
                            android:text="@string/unknown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="@dimen/task_info_group_inner_text"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:text="Warehouse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/task_info_group_inner_text"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/task_warehouse"
                            android:text="@string/unknown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="@dimen/task_info_group_inner_text"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:text="State"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/task_info_group_inner_text"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/task_state"
                            android:text="@string/unknown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="@dimen/task_info_group_inner_text"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--Comments-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="@string/comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/task_info_group_name_text"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"/>
                <View
                    android:background="#999999"
                    android:layout_width= "match_parent"
                    android:layout_height="2dip" />
                <TextView
                    android:id="@+id/task_comment"
                    android:text="@string/unknown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="@dimen/task_info_group_inner_text"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>